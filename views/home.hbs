<div class="products-container">
    <div class="breadcrumbs">
        <ul class="bread-list">
            {{#each breadcrumbs}}
                {{#if @last}}
                    <li class="bread-item">{{this.text}}</li>
                {{else}}
                    <li class="bread-item">
                        <a href="{{this.href}}">{{this.text}}</a>
                    </li>
                    <li class="bread-item">
                        <span>></span>
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
    <h1 class="product-head">DAF Trucks</h1>
    <div class="content">
        <div class="search">
            <div class="search-area">
                <div class="numbers-founder">
                    <output class="numbers-found"></output>
                    <span class="subtext">Results Found</span>
                </div>
                <hr />
                <div class="form-wrap">
                    <form class="search-params">
                        <div class="axle-param">
                            <div class="axle-param-btn">
                                <span class="param-title">Axle configuration</span>
                                <button
                                    class="btn-param"
                                    type="button"
                                >&#11167;</button>
                            </div>
                            <div class="axle-params">
                                <label>
                                    <input
                                        class="axle-input"
                                        type="checkbox"
                                        value="6x2"
                                    />
                                    <span class="param-value">6x2</span>
                                </label>
                                <label>
                                    <input
                                        class="axle-input"
                                        type="checkbox"
                                        value="4x4"
                                    />
                                    <span class="param-value">4x4</span>
                                </label>
                                <label>
                                    <input
                                        class="axle-input"
                                        type="checkbox"
                                        value="4x2"
                                    />
                                    <span class="param-value">4x2</span>
                                </label>
                            </div>
                        </div>
                        <div class="price-param">
                            <div class="price-param-btn">
                                <span class="param-title">Price</span>
                                <button
                                    class="btn-param"
                                    type="button"
                                >&#11167;</button>
                            </div>
                            <div class="price-params">
                                <label>
                                    <input
                                        class="price-input"
                                        type="text"
                                        placeholder="min"
                                    />
                                </label>
                                <label>
                                    <input
                                        class="price-input"
                                        type="text"
                                        placeholder="max"
                                    />
                                </label>
                            </div>
                        </div>
                        <div class="keyword-param">
                            <div class="keyword-param-btn">
                                <span class="param-title">Keyword</span>
                                <button
                                    class="btn-param"
                                    type="button"
                                >&#11167;</button>
                            </div>
                            <div class="keyword-params">
                                <label>
                                    <input
                                        class="keyword-input"
                                        type="text"
                                        placeholder="Keyword"
                                    />
                                </label>
                            </div>
                        </div>
                        <button class="btn-search" type="">SEARCH</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="products">
            <div class="pages">
                <div class="btns">
                    <ul class="btns-list">
                        <li class="btn-item">
                            <button>&#11164;</button>
                        </li>
                        <li class="btn-item">
                            <button>1</button>
                        </li>
                        <li class="btn-item">
                            <button>2</button>
                        </li>
                        <li class="btn-item">
                            <button>&#11166;</button>
                        </li>
                    </ul>
                </div>
                <div class="sorting">
                    Sort by
                    <select class="sort">
                        <option selected hidden>Sort options</option>
                        <option></option>
                        <option value="price">Price</option>
                        <option value="name">Name</option>
                    </select>
                </div>
            </div>
            <ul class="products-list">
                {{#each stock}}
                    <li class="product-item">
                        <div class="product-item_wrap">
                            <div class="product-img">
                                <a href="{{this.href}}">
                                    <img src="views/img/{{this.image}}" />
                                </a>
                            </div>
                            <div class="product-info">
                                <div class="main-info">
                                    <div class="title_price">
                                        <a
                                            class="product-title"
                                            href="{{this.href}}"
                                        >
                                            {{this.title}}
                                        </a>
                                        <span class="product-price">
                                            {{this.price_currency}}
                                            {{this.price}}
                                        </span>
                                    </div>
                                    <div class="description">
                                        <span class="desc">
